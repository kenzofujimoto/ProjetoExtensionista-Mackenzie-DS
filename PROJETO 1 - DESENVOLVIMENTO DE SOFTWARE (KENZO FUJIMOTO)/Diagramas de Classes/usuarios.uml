@startuml

'== CLASSES DE USUÁRIOS ==
class Usuario {
  - id: UUID
  - nome: String
  - email: String
  - matricula: String
  - dataCadastro: LocalDateTime
  - ativo: boolean
  + autenticar()
  + alterarSenha()
  + getPerfil()
}

class Operador {
  - turno: String
  - equipamentosHabilitados: List<String>
  + registrarProducao()
  + registrarOcorrencia()
  + registrarLimpeza()
  + consultarOrdensProducao()
}

class SupervisorProducao {
  - areaResponsavel: String
  - equipamentosSupervisionados: List<String>
  + autorizarReprocessamento()
  + aprovarProtocolos()
  + gerarRelatoriosTurno()
  + supervisionarEquipe()
}

class GerenteProducao {
  - departamento: String
  - orcamento: double
  + autorizarInicioProducao()
  + aprovarOrdensProducao()
  + analisarEficiencia()
  + gerenciarRecursos()
}

class PCP {
  - especialidade: String
  - projetos: List<String>
  + planejarProducao()
  + calcularNecessidadeMateriais()
  + otimizarCapacidade()
  + acompanharOrdens()
}

class Estoquista {
  - areasHabilitadas: List<String>
  - equipamentos: List<String>
  + registrarEntrada()
  + registrarSaida()
  + realizarInventario()
  + escanearEtiquetas()
  + ajustarEstoque()
}

class GerenteEstoque {
  - armazens: List<String>
  - responsavelCompras: boolean
  + gerenciarArmazenamento()
  + aprovarReservas()
  + emitirRelatorios()
  + controlarValidades()
}

class Vendedor {
  - regiao: String
  - metaVendas: double
  - clientes: List<Cliente>
  + cadastrarCotacao()
  + calcularOrcamento()
  + gerarProposta()
  + acompanharPedidos()
  + negociarPropostas()
}

class GerenteVendas {
  - equipe: List<Vendedor>
  - orcamentoDepartamento: double
  + gerenciarEquipe()
  + aprovarDescontos()
  + analisarPerformance()
  + definirMetas()
  + gerarRelatorios()
}

class AnalistaQualidade {
  - laboratorio: String
  - especialidades: List<String>
  + realizarTestes()
  + aprovarLotes()
  + emitirCertificados()
  + investigarNaoConformidades()
}

'== RELACIONAMENTOS DE HERANÇA ==
Usuario <|-- Operador
Usuario <|-- SupervisorProducao
Usuario <|-- GerenteProducao
Usuario <|-- PCP
Usuario <|-- Estoquista
Usuario <|-- GerenteEstoque
Usuario <|-- Vendedor
Usuario <|-- GerenteVendas
Usuario <|-- AnalistaQualidade

'== RELACIONAMENTOS COM OUTRAS CLASSES ==
Operador --> OrdemProducao
Operador --> Ocorrencia
SupervisorProducao --> Lote
GerenteProducao --> OrdemProducao
PCP --> OrdemProducao
PCP --> MateriaPrima
Estoquista --> MovimentacaoEstoque
Estoquista --> LocalArmazenamento
GerenteEstoque --> Estoque
Vendedor --> Cotacao
Vendedor --> Cliente
GerenteVendas --> Vendedor
AnalistaQualidade --> ControleQualidade

@enduml